<h1>Log In</h1>

<%= form_tag sessions_path, :class => "form-horizontal" do %>
<div class="control-group">
    <%= label_tag :email, nil, :class=> "control-label" %>
    <div class="controls">
    	<%= text_field_tag :email, params[:email] %>
	</div>	
</div>
<div class="control-group">
    <%= label_tag :password, nil, :class=> "control-label" %>
    <div class="controls">
    	<%= password_field_tag :password %>
    </div>	
</div>
<div class="controls">
      <label class="checkbox">
    	<%= check_box_tag :remember_me, 'yes', params[:remmeber_me] => true%> Remember me
    	</label>
  </div>
<div class="control-group">
	<div class="controls">
  		<%= submit_tag "Log In" %>
  	</div>
</div>  	
<% end %>